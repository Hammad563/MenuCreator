<%= form_with model: menu, data: { turbo: false } do |f| %>
    <div class="space-y-6">
        <div>
            <h1 class="text-lg leading-6 font-medium text-gray-900">Create a Menu</h1>
            <p class="mt-1 text-sm text-gray-500">Please fill out the information</p>
        </div>
        <div>
            <%= f.label :title, "Title (Optional)", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :title, class: "sm:text-sm border-gray-300 rounded-md block w-full shadow-sm focus-ring-blue-500" %>
        </div>
        <div>
            <%= f.label :sheet_key, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :sheet_key, placeholder: "1KSGPcvIecxHkRnsdsEMYx5BI6ns83UM0Ky9oQ4gH1Lw", disabled: menu.persisted?, class: "sm:text-sm border-gray-300 rounded-md disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none disabled:bg-slate-50 block w-full shadow-sm focus-ring-blue-500" %>
        </div>

        <div class="flex justify-end">
            <%= f.submit class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
        </div>
    </div>
<% end %>